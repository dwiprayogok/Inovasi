<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    //header
    <RelativeLayout
        android:id="@+id/lay_logo"
        android:background="@color/title_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>

        <TextView
            android:textColor="@color/md_white_1000"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLICATION \nTRACKING"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lay_cariappid"
        android:layout_below="@+id/lay_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="2dp"
            android:id="@+id/lay_input_process"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:id="@+id/spinn"
                android:entries="@array/search"></Spinner>

            <EditText
                android:textColor="@color/md_black_1000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textColorHint="@color/md_black_1000"
                android:id="@+id/edt_process"
                android:ems="10"/>

        </LinearLayout>


        <Button
            android:layout_below="@+id/lay_input_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_black_1000"
            android:id="@+id/btn_search_process"
            />

        <android.support.v7.widget.RecyclerView
            android:padding="5dp"
            android:id="@+id/list_appid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_search_process"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo_home2"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_2"/>
    </RelativeLayout>





</RelativeLayout>